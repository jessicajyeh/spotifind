<html>
	<head>
		<title>SpotiFind</title>
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>		
		<script src="/javascripts/angularApp.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
	</head>
	<body ng-app="spotifind">
		
		<div>
			<ui-view></ui-view>
		</div>

		<script type="text/ng-template" id="/home.html">
			<div class="page-header">
				<h1>SpotiFind</h1>
			</div>
			<div>
				{{test}}
			</div>
			<p>Click the button to get your coordinates.</p>

			<button ng-click="getLocation()">Try It</button>
			<!--
			<p id="demo"></p>
			-->
			<p>Click to get latitude and latitude</p>
			<div>
				latitude: {{latitude}}
			</div>
			<div>
				longitude: {{longitude}}
			</div>
			<button ng-click="saveLocation()">Save Your Location</button>
			<div ng-repeat="Location in locations">
				{{Location}}
			</div>

		</script>

		<script type="text/ng-template" id="/locations.html">
			<div ng-repeat="Location in locations">
				{{Location}}
			</div>			
		</script>
	</body>
</html>
